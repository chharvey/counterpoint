{
	"compilerOptions": {
		"outDir":             "./build/",
		"target"            : "ES2020",
		"module"            : "commonjs",
		"esModuleInterop"   : true,
		"strict"            : true,
		"importsNotUsedAsValues": "error",
		"noImplicitReturns" : true,
		"noUnusedLocals":         true,
		"noUnusedParameters":     true,
		"removeComments"    : true,
		"noEmitOnError"     : true
	},
	"include": ["./src/"],
	"typedocOptions": {
		"tsconfig": "./",
		"mode"   : "file",
		"name"   : "solid",
		"out"    : "./docs/api/",
		"includeDeclarations" : true,
		"excludeExternals"    : true,
		"ignoreCompilerErrors": true
	}
}
