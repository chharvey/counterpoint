{
	"compilerOptions": {
		// Project Options
		"module":         "commonjs",
		"outDir":         "./build/",
		"removeComments": true,
		"target":         "ES2020",
		// Strict Checks
		"strict": true,
		// Module Resolution
		"esModuleInterop": true,
		// Linter Checks
		"noImplicitReturns":  true,
		"noUnusedLocals":     true,
		"noUnusedParameters": true,
		// Advanced
		"importsNotUsedAsValues": "error",
		"noEmitOnError":          true,
	},
	"include": ["./src/"],
}
