{
	"compilerOptions": {
		// Project Options
		"declaration": true,
		"module":      "commonjs",
		"outDir":      "./build/",
		"target":      "ESnext",
		// Strict Checks
		"strict": true,
		// Module Resolution
		"esModuleInterop": true,
		// Linter Checks
		"noImplicitOverride": true,
		"noImplicitReturns":  true,
		"noUnusedLocals":     true,
		"noUnusedParameters": true,
		// Experimental
		"experimentalDecorators": true,
		// Advanced
		"importsNotUsedAsValues": "error",
		"noEmitOnError":          true,
		"skipLibCheck":           true,
	},
	"include": ["./src/"],
}
