{
  "name": "@chharvey/counterpoint",
  "version": "0.3.1",
  "description": "A robust programming language.",
  "homepage": "https://github.com/chharvey/counterpoint#readme",
  "bugs": {
    "url": "https://github.com/chharvey/counterpoint/issues"
  },
  "license": "AGPL-3.0-or-later",
  "author": "Chris Harvey <1362083+chharvey@users.noreply.github.com>",
  "main": "build/main.js",
  "type": "module",
  "bin": {
    "cpc": "bin/cpc.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chharvey/counterpoint.git"
  },
  "scripts": {
    "cpc": "cpc",
    "cpc-h": "cpc -h",
    "cpc-v": "cpc -v",
    "cpc:c": "cpc c ./sample/test-v0.3.solid",
    "cpc:c-o": "cpc c ./sample/test-v0.3.solid -o ./sample/testout.wasm",
    "cpc:c-p": "cpc c ./sample/test-v0.3.solid -p ./sample/counterpoint-config.json",
    "cpc:d": "cpc d ./sample/test-v0.3.solid",
    "cpc:d-o": "cpc d ./sample/test-v0.3.solid -o ./sample/testout.wat",
    "cpc:d-p": "cpc d ./sample/test-v0.3.solid -p ./sample/counterpoint-config.json",
    "cpc:r": "cpc r ./sample/test-v0.3.wasm",
    "predist": "eslint . --ext .cjs,.cts,.js,.mjs,.mts,.ts",
    "dist": "tsc",
    "test": "mocha -r ts-node/esm src/index.ts --loader='ts-node/esm' --timeout 10000 './test/**/*.test.ts'",
    "prebuild": "npm run build -w tree-sitter-counterpoint && npm rebuild",
    "build": "rm -rf ./build/ && npm run dist && npm run test"
  },
  "dependencies": {
    "@chharvey/requirejson": "^2.0.0",
    "extrajs": "^0.25.0",
    "fast-deep-equal": "^3.1.3",
    "minimist": "^1.2.6",
    "tree-sitter": "0.20.0",
    "utf8": "^3.0.0",
    "wabt": "^1.0.16"
  },
  "devDependencies": {
    "@types/minimist": "^1.2.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "@types/utf8": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.22.0",
    "mocha": "^10.0.0",
    "ts-node": "^10.0.0",
    "typescript": "~5.1.0"
  },
  "engines": {
    "node": ">=16 < 17"
  },
  "private": true,
  "workspaces": [
    "tree-sitter-counterpoint"
  ]
}
