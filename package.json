    "@chharvey/parser": "^0.5.0",
    "@types/minimist": "^1.2.0",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.1",
    "extrajs": "^0.21.0",
    "gulp": "^4.0.2",
    "gulp-mocha": "^7.0.2",
    "gulp-typescript": "^5.0.1",
    "ts-node": "^9.0.0",
    "typescript": "~4.1.3"
  },
  "dependencies": {
    "@types/semver": "^7.2.0",
